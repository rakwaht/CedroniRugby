<% if @all_news.count == 0 %>
	<div class="alert alert-error principale">
      <h2><strong><center>Non sono presenti news!</center></strong></h2>
    </div>
<% else %>
	<%@all_news.each do |n| %>
			<div class="post-header">
				<span class="data"><%=n.created_at.strftime("%Y-%m-%d") %></span>
				&nbsp
				<%= link_to controller: :news, action: :show, :news_id => n.id do %>
					<span class="titolo"><%= n.title %></span>
				<%end%>
			</div>
	<% end %>
<% end %>