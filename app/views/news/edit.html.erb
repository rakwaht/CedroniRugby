<h1>Editing News</h1>
<%= form_for :news, url: {controller: :news, action: :create} do |n| %>
    Title: <%= n.text_field :title %><br />
    Body: <%= n.text_area :body %><br />
    Image URL: <%= n.text_field :image_url %><br />
    Argomento: <%= n.select :topic, options_for_select(["Maschile","Femminile","Societa"])%><br />
    <%= n.submit "Save" %>
<% end%>