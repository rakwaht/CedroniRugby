<div class="well">
	<h4>Login</h4>
	<%= form_for :user, url:{controller: :sessions, action: :create} do |u| %>
		<%= u.text_field :name, :placeholder => "Name" %><br />
		<%= u.password_field :password, :placeholder => "Password" %><br /> 
	  <div class="actions">
		<%= u.submit :login, :class => 'btn btn-success'%>	
	  </div>
	<% end %>
</div>