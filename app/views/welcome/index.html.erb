					<div class="imageContainer">
						<img src="<%= n.image_url %>" >
					</div>
					<div class="testonews">
						<div class="post-header">
							<span class="data"><%=n.created_at.strftime("%Y-%m-%d") %></span>
							&nbsp
							<span class="titolo"><%= n.title %></span>
						</div>
						<p><%= n.body %></p>
					</div>
					<div class=”clearer”> </div>
				</div>
			<%else%>
