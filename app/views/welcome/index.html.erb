<div class="row-fluid">
	<div class="offset1 span10">
		<div id="myCarousel" class="carousel slide">
	  		<ol class="carousel-indicators">
	    		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	    		<li data-target="#myCarousel" data-slide-to="1"></li>
	    		<li data-target="#myCarousel" data-slide-to="2"></li>
	  		</ol>
	  		<!-- Carousel items -->
	  		<div class="carousel-inner">
	    		<div class="active item">
	    			<%=image_tag("carousel1.jpg")%>
	    			<div class="carousel-caption">
	    				<h4>Squadra Maschile</h4>
	    				<p>Foto Cedroni Rugby dopo la prima amichevole</p>
	    			</div>
	    		</div>
	    		<div class="item">
	    			<%=image_tag("carousel2.jpg")%>
	    			<div class="carousel-caption">
	    				<h4>Cedroni e Sirena</h4>
	    				<p>Foto Cedroni Rugby insieme a SirenaOltrefersina</p>
	    			</div>
	    		</div>
	    		<div class="item">
	    			<%=image_tag("carousel3.jpg")%>
	    			<div class="carousel-caption">
	    				<h4>Squadra Femminile</h4>
	    				<p>Foto ragazze della cedroni femminile e lagaria rugby femminile</p>
	    			</div>
	    		</div>
	  		</div>
	  		<!-- Carousel nav -->
	  		<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
	  		<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
		</div>
	</div>
</div>
