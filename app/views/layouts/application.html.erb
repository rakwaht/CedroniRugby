      <%= yield %>
      <hr>
      <footer>
        <div class="row-fluid center foot">
          <br />
          <p>"&copy; Rakwaht 2013 - Built with 
          <a style="color:#08C" href="http://rubyonrails.org/" target="blank">Ruby on Rails</a>"</p>
          <br />
        </div>
      </footer>
    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
